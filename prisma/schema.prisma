generator client {
  provider = "prisma-client-js"
  output   = "generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(uuid())
  email           String          @unique
  password        String
  createdAt       DateTime        @default(now())
  passwordEntries PasswordEntry[]
}

model PasswordEntry {
  id        String   @id @default(uuid())
  title     String
  username  String
  secret    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}
